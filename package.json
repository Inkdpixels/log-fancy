{
  "name": "log-fancy",
  "version": "0.0.0-development",
  "description": "Logging in both Node and the browser the fancy way",
  "main": "src/node.js",
  "browser": "src/browser.js",
  "scripts": {
    "test": "npm run lint && npm run jest:coverage",
    "lint": "eslint src",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch",
    "jest:coverage": "npm run jest -- --coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Inkdpixels/log-fancy.git"
  },
  "engines": {
    "node": ">=8.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)spec.js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  },
  "keywords": [
    "log",
    "fancy",
    "logger",
    "logging",
    "color",
    "colour",
    "coloured",
    "debug"
  ],
  "author": "Tyll Wei√ü <inkdpixels@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Inkdpixels/log-fancy/issues"
  },
  "homepage": "https://github.com/Inkdpixels/log-fancy#readme",
  "devDependencies": {
    "@inkdpixels/commit-analyzer": "^1.0.0",
    "@inkdpixels/release-notes-generator": "^1.0.0",
    "eslint": "^4.4.1",
    "eslint-config-xo": "^0.18.2",
    "jest": "^20.0.4",
    "sinon": "^3.2.0",
    "semantic-release": "^6.3.6"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "debug": "^3.0.0",
    "log-symbols": "^2.0.0",
    "supports-color": "^4.2.1"
  }
}
